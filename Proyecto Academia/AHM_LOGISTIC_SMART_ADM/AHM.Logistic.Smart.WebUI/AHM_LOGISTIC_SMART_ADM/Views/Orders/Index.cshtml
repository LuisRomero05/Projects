@model IEnumerable<AHM.Logistic.Smart.Common.Models.SalesOrderViewModel>
@{
    ViewData["Title"] = "Órdenes";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Table = "Órdenes de ventas";
    ViewBag.Description = "";
}
<div class="page-content-wrapper">
    <div class="row">
        <div class="col-12">
            <div class="card m-b-20">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <h4 class="card-title font-16 mt-0">Listado de órdenes de ventas</h4>
                        </div>
                        <div style="display:flex; align-items:center; justify-content:end" class="col-md-4">
                            <div style="text-align:right;">
                                <a class="btn btn-primary" asp-controller="Orders" asp-action="Create">Nuevo registro</a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                            <thead>
                                <tr class="ligth">
                                    <th>Id</th>
                                    <th>Comprador</th>
                                    <th>RTN</th>
                                    <th>Correo electrónico</th>
                                    <th>Teléfono</th> 
                                    <th>Municipio</th>
                                    <th style="text-align:center;">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.sor_Id)</td>
                                        <td>@Html.DisplayFor(modelItem => item.cus_Name)</td>
                                        <td>@Html.DisplayFor(modelItem => item.cus_RTN)</td>
                                        <td>@Html.DisplayFor(modelItem => item.cus_Email)</td>
                                        <td>@Html.DisplayFor(modelItem => item.cus_Phone)</td>
                                        <td>@Html.DisplayFor(modelItem => item.mun_Description)</td>
                                        <td style="text-align:center; color: #FFF">
                                            <div class="flex align-items-center list-user-action">
                                                <a class="btn btn-sm btn-icon btn-secondary" data-toggle="tooltip" data-placement="top" title="" data-original-title="Detalles" asp-route-id="@item.sor_Id" asp-area="" asp-controller="Orders" asp-action="Details">
                                                    <span class="btn-inner">
                                                        <svg width="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" stroke="currentColor">
                                                            <path d="M13 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V9z" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                                                            <polyline points="13 2 13 9 20 9"></polyline>
                                                        </svg>
                                                    </span>
                                                </a>
                                                <a class="btn btn-sm btn-icon btn-secondary" data-toggle="tooltip" data-placement="top" title="" data-original-title="Editar" asp-route-id="@item.sor_Id" asp-area="" asp-controller="Orders" asp-action="Edit">
                                                    <span class="btn-inner">
                                                        <svg width="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                            <path d="M11.4925 2.78906H7.75349C4.67849 2.78906 2.75049 4.96606 2.75049 8.04806V16.3621C2.75049 19.4441 4.66949 21.6211 7.75349 21.6211H16.5775C19.6625 21.6211 21.5815 19.4441 21.5815 16.3621V12.3341" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                                                            <path fill-rule="evenodd" clip-rule="evenodd" d="M8.82812 10.921L16.3011 3.44799C17.2321 2.51799 18.7411 2.51799 19.6721 3.44799L20.8891 4.66499C21.8201 5.59599 21.8201 7.10599 20.8891 8.03599L13.3801 15.545C12.9731 15.952 12.4211 16.181 11.8451 16.181H8.09912L8.19312 12.401C8.20712 11.845 8.43412 11.315 8.82812 10.921Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                                                            <path d="M15.1655 4.60254L19.7315 9.16854" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                                                        </svg>
                                                    </span>
                                                </a>
                                                <a href="https://localhost:44369/OrdersReports/Details?sorId=@item.sor_Id&accion=pdf" target="_blank" class="btn btn-sm btn-icon btn-dark" data-toggle="tooltip" data-placement="top" title="" data-original-title="Reporte">
                                                    <span class="btn-inner">
                                                        <svg width="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" stroke="currentColor">
                                                            <path d="M16 4h2a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                                                            <rect x="8" y="2" width="8" height="4" rx="1" ry="1"></rect>
                                                        </svg>
                                                    </span>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.js"></script>
<script src="~/js/app/Orders/OrdersDelete.js"></script>
<script>
    function docReady(fn) {
        if (document.readyState === "complete" || document.readyState === "interactive") {
            setTimeout(fn, 1);
        } else {
            document.addEventListener("DOMContentLoaded", fn);
        }
    }
    docReady(function () {
        Menu('ordenes');

    });
</script>

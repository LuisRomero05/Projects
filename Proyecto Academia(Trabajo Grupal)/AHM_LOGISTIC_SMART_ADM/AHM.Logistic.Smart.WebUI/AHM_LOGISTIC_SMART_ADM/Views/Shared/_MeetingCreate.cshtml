@model AHM.Logistic.Smart.Common.Models.MeetingsModel

<div class="card-body">
    <form class="form-row">
        <input type="hidden" id="cun_IdUserCreate" asp-for="met_IdUserCreate" value="1" />
        <input type="hidden" id="cus_Id" asp-for="cus_Id" />
        <div class="form-group col-md-6">
            <label class="form-label is-required">Titulo de la reunión</label>
            <input type="text" id="met_Title" maxlength="100" asp-for="met_Title" value="" class="form-control" />
        </div>
        <div class="form-group col-md-6">
            <label class="form-label is-required">Link de reunión</label>
            <input type="text" id="met_MeetingLink" maxlength="100" asp-for="met_MeetingLink" value="" class="form-control" />
        </div>
        <div class="form-group col-md-6" maxlength="14">
            <label class="form-label is-required">Tiempo de inicio</label>
            <input type="time" id="met_StartTime" asp-for="met_StartTime" value="" class="form-control" />
        </div>
        <div class="form-group col-md-6" maxlength="14">
            <label class="form-label is-required">Tiempo de fin</label>
            <input type="time" id="met_EndTime" asp-for="met_EndTime" value="" class="form-control" />
        </div>
        <div class="form-group col-md-6">
            <label class="form-label is-required">Fecha</label>
            <input type="date" id="met_Date" asp-for="met_Date" value="" class="form-control" />
        </div>
        <div class="form-group col-md-6">
            <label class="form-label">Invitados</label>
            <div class="form-inline">
                <div class="col-md-11" id="divInvitados" style="padding-left: 0px; padding-right:0px;">
                    <select id="invitados" class="form-control">

                    </select>
                </div>
                <div class="col-md-1">
                    <button type="button" class="btn btn-secondary" onclick="AddInvitados()">
                        <i class="fas fa-plus"></i>
                    </button>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <table class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                <thead>
                    <tr class="ligth">
                        <th>Id</th>
                        <th>Invitados</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody id="TbInvitaciones">
                </tbody>
            </table>
        </div>
        <div class="col-md-12">
            <button type="button" class="btn btn-secondary" style="margin: 0px 30px 0px 0px;" onclick="InsertarMeeting()">Agregar</button>
        </div>
    </form>
</div>


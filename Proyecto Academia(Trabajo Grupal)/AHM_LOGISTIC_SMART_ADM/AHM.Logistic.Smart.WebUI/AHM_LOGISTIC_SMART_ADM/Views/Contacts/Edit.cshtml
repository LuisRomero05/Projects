@model AHM.Logistic.Smart.Common.Models.ContactsViewModel

@{
    ViewData["Title"] = "Editar contacto";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Table = "Contactos";
}

<!-- Build -->
<link rel="stylesheet" href="~/build/css/intlTelInput.css">
<link rel="stylesheet" href="~/build/css/demo.css">

<div class="page-content-wrapper">
    <div class="row">
        <div class="col-md-12">
            <div class="card m-b-30">
                <div class="card-body">
                    <h4 class="card-title font-16 mt-0">Editar contacto</h4>
                    <div class="card-body">
                        <form method="post" id="frmEditContacts" autocomplete="off">
                            <div class="row">

                                <input type="hidden" asp-for="cont_Id" id="IdCont" />
                                <input type="hidden" asp-for="occ_Id" id="IdOcc" />
                                <input type="hidden" asp-for="cus_Id" id="IdCus" />
                                <div class="form-group col-md-6">
                                    <label class="form-label is-required">Nombre</label>
                                    <input type="text" asp-for="cont_Name" class="form-control" maxlength="100" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="form-label is-required">Apellido</label>
                                    <input type="text" asp-for="cont_LastName" class="form-control" maxlength="100" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="form-label is-required">Correo electronico</label>
                                    <input maxlength="100" type="text" asp-for="cont_Email" class="form-control" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="form-label is-required">Número celular</label>
                                    <input type="text" maxlength="100" asp-for="cont_Phone" class="form-control validateInput-ui"/>
                                    <div style="color: red;" id="cont_PhoneMessEd"></div>
                                </div>
                                <div class="form-group col-md-6">
                                    <div id="messageCre">
                                        <label class="form-label is-required">Ocupaciones</label>
                                        <select asp-for="occ_Id" id="SelectOccupations" class="form-control" maxlength="1"></select>
                                    </div>
                                </div>
                                <div class="form-group col-md-6">
                                    <div id="messageCre2">
                                        <label class="form-label is-required">Cliente</label>
                                        <select asp-for="cus_Id" id="SelectCustomers" class="form-control" maxlength="1"></select>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <button type="submit" id="SubmitbtnEditContacts" class="btn btn-secondary" style="margin: 0px 30px 0px 0px;">Aceptar</button>
                                <a class="btn btn-primary" asp-area="" asp-controller="Contacts" asp-action="Index">Cancelar</a>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/build/js/intlTelInput.js"></script>
    <script src="~/js/app/Contacts/ContactsEdit.js"></script>
    <script src="~/js/app/Contacts/Contacts.js"></script>


    <script>
        function docReady(fn) {
            if (document.readyState === "complete" || document.readyState === "interactive") {
                setTimeout(fn, 1);
            } else {
                document.addEventListener("DOMContentLoaded", fn);
            }
        }
        docReady(function () {
            Menu('contacts');

        });
    </script>
}
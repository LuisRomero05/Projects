@model AHM.Logistic.Smart.Common.Models.ProductsModel
@{
    ViewData["Title"] = "Crear productos";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Table = "Productos";
}

<div class="page-content-wrapper">
    <div class="row">
        <div class="col-md-12">
            <div class="card m-b-30">
                <div class="card-body">
                    <h4 class="card-title font-16 mt-0">Registrar producto</h4>
                    <div class="card-body">
                        <form method="post" autocomplete="off" id="frmCreateProducts">
                            <div class="row">
                                <input type="hidden" asp-for="pro_IdUserCreate" value="1" />
                                <div class="form-group col-md-6">
                                    <label class="form-label is-required">Descripción</label>
                                    <input type="text" asp-for="pro_Description" class="form-control" maxlength="200" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="form-label is-required">Precio de compra</label>
                                    <input type="text" asp-for="pro_PurchasePrice" value="" class="form-control" maxlength="11" data-type="currency">
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="form-label is-required">Precio de venta</label>
                                    <input type="text" asp-for="pro_SalesPrice" class="form-control" value="" maxlength="11" data-type="currency" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="form-label is-required">Stock</label>
                                    <input type="text" asp-for="pro_Stock" class="form-control" value="" maxlength="6" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="form-label is-required">ISV</label>
                                    <input type="text" asp-for="pro_ISV" class="form-control" value="" maxlength="2" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="form-label is-required">Unidad de medida</label>
                                    <div id="divUnidad">
                                        <select asp-for="uni_Id" class="form-control">
                                            <option value="0">Por favor seleccione una opción... </option>
                                            <option value="1">Tonelada</option>
                                            <option value="2">Kilogramo</option>
                                            <option value="3">Gramo</option>
                                            <option value="4">Miligramo</option>
                                            <option value="5">Libra</option>
                                            <option value="6">Onza</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="form-label is-required">Categoría</label>
                                    <div id="divCategoria">
                                        <select name="cat_Id" id="SelectCategories" class="form-control" maxlength="1"></select>
                                    </div>
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="form-label is-required">Subcategoría</label>
                                    <div id="divSubCat">
                                        <select asp-for="scat_Id" id="SelectSubcategories" class="form-control" maxlength="1" disabled>
                                            <option value="0"> Por favor seleccione una opción... </option>
                                        </select>
                                    </div>

                                </div>

                            </div>

                            <button type="submit" class="btn btn-secondary" style="margin: 0px 30px 0px 0px;">Aceptar</button>
                            <a class="btn btn-primary" asp-area="" asp-controller="Products" asp-action="Index">Cancelar</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/app/Productos/ProductsCreate.js"></script>
    <script>
        function docReady(fn) {
            if (document.readyState === "complete" || document.readyState === "interactive") {
                setTimeout(fn, 1);
            } else {
                document.addEventListener("DOMContentLoaded", fn);
            }
        }
        docReady(function () {
            Menu('products');

        });
    </script>
}